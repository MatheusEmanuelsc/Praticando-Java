package entities;

import java.time.LocalDateTime;


public class ContratosHora {

	private LocalDateTime dataContrato;
	private Double valorHora;
	private Integer horas;
	
	
	public ContratosHora(LocalDateTime dataContrato, Double valorHora, Integer horas) {
		this.dataContrato = dataContrato;
		this.valorHora = valorHora;
		this.horas = horas;
	}


	public LocalDateTime getDataContrato() {
		return dataContrato;
	}


	public void setDataContrato(LocalDateTime dataContrato) {
		this.dataContrato = dataContrato;
	}


	public Double getValorHora() {
		return valorHora;
	}


	public void setValorHora(Double valorHora) {
		this.valorHora = valorHora;
	}


	public Integer getHoras() {
		return horas;
	}


	public void setHoras(Integer horas) {
		this.horas = horas;
	}
	
	public  double valorContrato() {
		return getHoras()*getValorHora();
	}
	
	
	
	
	
	
}
